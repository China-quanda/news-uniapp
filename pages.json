{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
			// "^my-(.*)": "@/maya-ui/components/my-$1/my-$1.vue"
		}
	},
	"pages": [{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationStyle": "custom",
				"app-plus": { // ios模拟器测试无效果，真机未测试
					"safearea": {
						"background": "#FFFFFF", // 安全区域外的背景颜色，默认值为"#FFFFFF"  
						"bottom": {
							// 底部安全区域配置  
							"offset": "none" // 底部安全区域偏移，"none"表示不空出安全区域，"auto"自动计算空出安全区域，默认值为"none" 
						}
					}
				}
			}
		},
		{
			"path": "pages/login/confirmLogin",
			"style": {
				"navigationBarTitleText": "扫码登录确认"
			}
		},
		{
			"path": "pages/channel/index",
			"style": {
				"navigationBarTitleText": "channel",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/article/info",
			"style": {
				"navigationBarTitleText": "文章详情",
				"navigationStyle": "custom"
				// "h5": {
				// 	"titleNView": {
				// 		"type": "transparent"
				// 	}
				// }
			}
		},
		{
			"path": "pages/test/articleItem",
			"style": {
				"navigationBarTitleText": "articleItem"
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "%pages.home%",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "%pages.mine%"
				// "navigationStyle": "custom"
			}
		},
		{
			"path": "pages/pay/pay",
			"style": {
				"navigationBarTitleText": "pay",
				"enablePullDownRefresh": false
			}
		}
	],
